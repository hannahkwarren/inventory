<!DOCTYPE html>
<html>
  <head>
    <title>InventoryShopify</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all' %>
    <%= javascript_include_tag 'application' %>
  </head>

  <body>
      <p><%= link_to "Items", items_path %> | <%= link_to "Warehouses", warehouses_path %></p>
      <% flash.each do |type, msg| %>
        <div>
          <%= msg %>
        </div>
      <% end %>
    <%= yield %>
  </body>
</html>
